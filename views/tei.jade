extends layout


block content
  if mac
    div(id="teiMAC" style="visibility:hidden;")
      #{mac}
    div.row
      div.col-md-6
        h2 mac #{mac}
        br
        div.well
          Play with the connections to understand the nature of your creations. If nothing happens, ask.
          br
          br
        br
        h3 
          i.fa.fa-barcode
          | Digital
        br
        div.btn-group
          button.btn.btn-info(type="button" id="digital0") 1
          button.btn.btn-info(type="button" id="digital1") 1
          button.btn.btn-info(type="button" id="digital2") 1
          button.btn.btn-info(type="button" id="digital3") 1 
      div.col-md-6
        h3 
          i.fa.fa-bar-chart-o
          | Analog
        br
        iframe(src="https://dl.dropboxusercontent.com/u/5476179/spacebrew_graph/index.html?server=193.10.67.60&name=GraphsAnalog0_#{mac}" width="400px" seamless="true")
        br
        br
        iframe(src="https://dl.dropboxusercontent.com/u/5476179/spacebrew_graph/index.html?server=193.10.67.60&name=GraphsAnalog1_#{mac}" width="400px" seamless="true")
  else
    h3 Insert the <strong>ID</strong> from your phone
    div.input-group.input-group-lg
      span.input-group-btn
        button.btn.btn-default(type="button" id="teiButton")
          i.fa.fa-edit(id="teiIcon")
      input.form-control(type="text" placeholder="00:11:22:33" id="teiID")
    br
    br

  script(src="/js/lib/sb-1.2.0.js")
  script(src="/js/tei.js")
      
